    "node-record-lpcm16": "^1.0.1",
    "vosk": "^0.3.39"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2"
  }
}
